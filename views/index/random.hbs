{{!-- {{#if itemsAndChamp}} --}}
<div class="row row-cols-1 row-cols-md-2 g-4 d-flex justify-content-center">
    <div class="col">
        <div class="card text-center">
            <h1 class="text-danger">{{randomChamp.[0]}}</h1>
            <img src="{{image}}" class="card-img-top" alt="champImage">
            <div class="card-body d-flex justify-content-around">
                {{#each items}}
                <img src="{{this}}" alt="image">
                {{/each}}
            </div>
            <input class="btn btn-dark" type="button" value="New Random Champion"
                onClick="document.location.reload(true)">
        </div>
    </div>
    <div class="mb-3">
        <form action="/forum/post" method="post">
            <label for="" class="form-label">Title:</label>
            <input type="text" name="title" class="form-control w-25">
            <label for="exampleFormControlTextarea1" class="form-label">Post your RandomPick!</label>
            <textarea class="form-control" name="description" rows="3"></textarea>
            {{#each items}}
            <input type="hidden" class="form-control" name="imgItems" value="{{this}}"></input>
            {{/each}}
            <input type="hidden" class="form-control" name="imgChamp" value='{{image}}'></input>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>
{{!-- {{/if}} --}}

